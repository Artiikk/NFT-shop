<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s2 offset-s8"><a class="active" href="#login">Login</a></li>
      <li class="tab col s2"><a class="register" href="#register">Register</a></li>
    </ul>
  </div>

  <div id="login" class="auth col s6 offset-s3">
    {{#if loginError}}
      <div class="notify alert">
        <p>{{loginError}}</p>
      </div>
    {{/if}}

    {{#if registrationPending}}
      <div class="notify info">
        <p>You have to activate your account, please check your email for further details</p>
      </div>
    {{/if}}

    {{#if activationSuccess}}
      <div class="notify success">
        <p>Activation is successful! You can now log in!</p>
      </div>
    {{/if}}

    <form action="/auth/login" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" class="validate">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <label for="password">Password</label>
          <input id="password" name="password" type="password" class="validate">
        </div>
      </div>

      <input type="hidden" name="_csrf" value={{ csrf }}>

      <p><a href="/auth/reset">Forgot password?</a></p>

      <div class="row">
        <button class="btn btn-primary col s4 offset-s4">Log in</button>
      </div>
    </form>
  </div>

  <div id="register" class="auth col s6 offset-s3">
    {{#if registerError}}
      <div class="notify alert">
        <p>{{registerError}}</p>
      </div>
    {{/if}}
    
    <form action="/auth/register" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <label for="r-email">Email</label>
          <input id="r-email" name="email" type="email" class="validate">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <label for="name">Your name</label>
          <input id="name" name="name" type="text" class="validate">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <label for="r-password">Password</label>
          <input id="r-password" name="password" type="password" class="validate">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <label for="confirm">Confirm your password</label>
          <input id="confirm" name="confirm" type="password" class="validate">
        </div>
      </div>

      <input type="hidden" name="_csrf" value={{ csrf }}>

      <div class="row">
        <button class="btn btn-primary col s4 offset-s4">Register</button>
      </div>
    </form>
  </div>
</div>