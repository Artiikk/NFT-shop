<h1>New tokens</h1>

{{#if tokens.length}}
<div class="row">
  {{#each tokens}}
  <div class="col s4">
    <div class="card custom-card">
      <div class="card-image custom-card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content custom-card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action actions">
        <a href="/tokens/{{_id}}" target="_blank">Open NFT</a>
        {{#if @root.isAuth}}
          {{#ifEquals userId._id @root.userId}}
            <a href="/tokens/{{_id}}/edit?allow=true" target="_blank">Edit</a>
          {{/ifEquals}}

        <form action="/cart/add" method="POST">
          <input type="hidden" name="id" value="{{_id}}" />
          <input type="hidden" name="_csrf" value={{@root.csrf}}>
          <button type="submit" class="btn btn-primary">Buy</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<p>No tokens yet</p>
{{/if}}